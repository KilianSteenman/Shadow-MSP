<idea-plugin>
    <id>nl.shadowlink.mission.plugin</id>
    <name>Shadow-Mission</name>
    <vendor email="info@shadow-link.nl" url="http://www.shadow-link.nl">Shadow-Link</vendor>

    <description><![CDATA[
    Basic editor (by Sanny Builder) decompiled mission scripts<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Mission Script file" implementationClass="nl.shadowlink.mission.plugin.MissionFileType"
                  language="MissionScript" extensions="dsc"/>

        <lang.parserDefinition language="MissionScript" implementationClass="nl.shadowlink.mission.plugin.parser.MissionParserDefinition"/>
        <lang.syntaxHighlighterFactory language="MissionScript" implementationClass="nl.shadowlink.mission.plugin.highlighter.MissionHighlighterFactory"/>
        <lang.refactoringSupport language="MissionScript" implementationClass="nl.shadowlink.mission.plugin.refactoring.MissionRefactoringSupportProvider"/>
        <lang.findUsagesProvider language="MissionScript" implementationClass="nl.shadowlink.mission.plugin.usages.MissionFindUsagesProvider"/>
        <lang.commenter language="MissionScript" implementationClass="nl.shadowlink.mission.plugin.commenter.MissionCommenter"/>

        <colorSettingsPage implementation="nl.shadowlink.mission.plugin.highlighter.MissionColorSettingsPage"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>